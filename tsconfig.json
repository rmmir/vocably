{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": true,
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "include": ["src/**/*.ts", "src/prisma"],
    "exclude": ["node_modules", "dist"]
}
