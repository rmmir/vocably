generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/data.db"
}

model User {
    id String @id @default(cuid())
    email String @unique
    username String @unique
    password String
}

model Word {
    id String @id @default(cuid())
    englishWord String 
    foreignWord String 
    englishExample String 
    foreignExample String 
    score Int
    wordType String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
}